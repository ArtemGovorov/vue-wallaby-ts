{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "types": [
      "chai",
      "mocha",
      "sinon",
      "sinon-chai",
      "node",
      "vue"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ]
  }
}
